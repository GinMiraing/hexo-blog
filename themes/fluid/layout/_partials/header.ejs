<div class="header-inner">
  <nav id="navbar" class="navbar fixed-top navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="<%= url_for() %>">
        <strong><%= config.title %></strong>
      </a>
      <div class="navbar-icons">
        <a class="navbar-icon" href="javascript:;" role="button" onclick="applyCustomColorSchemaSettings(toggleCustomColorSchema())">
          <i class="iconfont icon-theme"></i>
        </a>
        <a class="navbar-icon scroll-top-button" href="#" role="button">
          <i class="iconfont icon-top"></i>
        </a>
        <a class="navbar-icon" id="navbar-toggler-btn" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <i class="iconfont icon-list"></i>
        </a>
      </div>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto text-center">
          <% for(const each of theme.navbar.menu || []) { %>
            <% if (!each.link) continue %>
            <% var text = each.name || __(each.key + '.menu') || __(each.key + '.title') %>
            <% if (text.indexOf('.menu') !== -1 || text.indexOf('.title') !== -1) {
              text = each.key
            } %>
            <li class="nav-item">
              <a class="nav-link" href="<%= url_for(each.link) %>">
                <%- each.icon ? '<i class="' + each.icon + '"></i>' : '' %>
                <%- text %>
              </a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
</div>
