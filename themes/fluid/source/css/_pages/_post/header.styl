.post-title
  h1
    font-size 1.6rem
    font-weight 600
    margin-bottom 2rem

.post-header
  display flex
  flex-direction row
  width 100%
  margin-bottom 2rem
  align-items center

.post-avatar
  width 60px

  img
    border-radius 50%
    border solid 1px var(--post-link-color)

.post-in-meta
  display flex
  flex-direction column
  box-sizing border-box
  width 100%
  height 100%
  margin-left 0.85rem

  span
    margin-left 0.85rem

  time
    margin-left 0.85rem