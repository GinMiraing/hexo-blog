.post-title
  h1
    font-size 25px
    font-weight 600
    margin-bottom 2rem

.post-header
  display flex
  flex-direction row
  width 100%
  margin-bottom 2rem

.post-avatar
  width 60px

  img
    border-radius 50%
    box-shadow 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)

.post-in-meta
  display flex
  flex-direction column
  box-sizing border-box
  width 100%
  height 100%
  margin-left 0.85rem

  span
    margin-left 0.85rem

  time
    margin-left 0.85rem